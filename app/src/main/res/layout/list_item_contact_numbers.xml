<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ListItem"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:background="@color/material.core.red"
    tools:ignore="UnusedResources">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginBottom="@dimen/margin.2"
        android:layout_marginLeft="@dimen/margin.4"
        android:layout_marginRight="@dimen/margin.4"
        android:layout_marginTop="@dimen/margin.2"

        android:src="@drawable/ic_person_black_24dp"
        app:civ_border_color="@color/black"
        app:civ_border_width="2dp" />

    <co.siempo.phone.customviews.RobotoMediumTextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignBaseline="@id/icon"
        android:layout_toRightOf="@id/icon"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="1"
        android:textColor="@color/text.primary"
        android:textSize="@dimen/text.size.medium"
        tools:text="John Doe" />

    <co.siempo.phone.customviews.RobotoCondensedTextView
        android:id="@+id/txtSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignLeft="@id/txtTitle"
        android:layout_below="@id/txtTitle"
        android:fontFamily="sans-serif"
        android:textColor="@color/text.secondary"
        android:textSize="@dimen/text.size.medium"
        tools:ignore="UnusedIds"
        tools:text="Mobile" />
</RelativeLayout>