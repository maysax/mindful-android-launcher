<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/pauseContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:transitionName="@string/what_s_your_intention"
                tools:ignore="UnusedIds">

    <android.support.v7.widget.CardView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        app:cardCornerRadius="@dimen/dp_3"
        app:cardElevation="@dimen/dp_5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dialog_blue"
                android:buttonGravity="top"
                android:gravity="center_vertical"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <co.siempo.phone.customviews.RobotoRegularTextView
                        android:id="@+id/txtSave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:padding="@dimen/dp_10"
                        android:text="@string/save"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>
                </RelativeLayout>
            </Toolbar>

            <LinearLayout
                android:id="@+id/linEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:background="@color/dialog_blue"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_5">

                <co.siempo.phone.customviews.RobotoRegularTextView
                    android:id="@+id/hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_2"
                    android:text="@string/what_s_your_intention"
                    android:textColor="#8AFFFFFF"
                    android:textSize="14sp"
                    android:visibility="visible"
                    tools:ignore="RtlSymmetry"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/dp_2"
                    tools:ignore="RtlSymmetry">

                    <co.siempo.phone.customviews.LockEditText
                        android:id="@+id/edtIntention"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_toLeftOf="@+id/imgClear"
                        android:background="@null"
                        android:focusable="true"
                        android:focusedByDefault="true"
                        android:gravity="left|center"
                        android:hint="@string/type_a_few_words"
                        android:imeActionLabel="SAVE"
                        android:imeOptions="actionDone"
                        android:inputType="textCapSentences"
                        android:maxLength="48"
                        android:paddingBottom="@dimen/dp_10"
                        android:paddingLeft="5dp"
                        android:textColor="@color/white"
                        android:textColorHint="#57FFFFFF"
                        android:textCursorDrawable="@drawable/custom_edit_text_cursor"
                        android:textSize="22sp"
                        android:transitionName=""
                        tools:targetApi="o"
                        tools:text="Try out new music">

                        <requestFocus/>
                    </co.siempo.phone.customviews.LockEditText>

                    <ImageView
                        android:id="@+id/imgClear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/dp_5"
                        android:src="@drawable/ic_icons_clear_white"
                        android:visibility="gone"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:orientation="vertical">

        <co.siempo.phone.customviews.RobotoRegularTextView
            android:id="@+id/txtHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:animateLayoutChanges="true"
            android:gravity="right"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:text="@string/help"
            android:textColor="@color/dialog_blue"
            android:textSize="17sp"
            android:visibility="visible"/>

        <LinearLayout
            android:id="@+id/linHelpWindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <ViewFlipper
                android:id="@+id/viewFlipper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <co.siempo.phone.customviews.RobotoRegularTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:gravity="top|left"
                    android:lineSpacingExtra="@dimen/dp_2"
                    android:maxLines="5"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:text="@string/message1"
                    android:textColor="#57000000"
                    android:textSize="16sp"/>

                <co.siempo.phone.customviews.RobotoRegularTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:gravity="top|left"
                    android:lineSpacingExtra="@dimen/dp_2"
                    android:maxLines="5"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:text="@string/message2"
                    android:textColor="#57000000"
                    android:textSize="16sp"/>

                <co.siempo.phone.customviews.RobotoRegularTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:gravity="top|left"
                    android:lineSpacingExtra="@dimen/dp_2"
                    android:maxLines="5"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:text="@string/message3"
                    android:textColor="#57000000"
                    android:textSize="16sp"/>

                <co.siempo.phone.customviews.RobotoRegularTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:gravity="top|left"
                    android:lineSpacingExtra="@dimen/dp_2"
                    android:maxLines="5"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:text="@string/message4"
                    android:textColor="#57000000"
                    android:textSize="16sp"/>
            </ViewFlipper>
            <!--</ScrollView>-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dp_10"
                tools:ignore="RtlSymmetry">

                <co.siempo.phone.customviews.RobotoRegularTextView
                    android:id="@+id/txtOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toLeftOf="@+id/txtTwo"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:text="@string/close"
                    android:textColor="@color/dialog_blue"
                    android:textSize="16sp"/>

                <co.siempo.phone.customviews.RobotoRegularTextView
                    android:id="@+id/txtTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:padding="@dimen/dp_10"
                    android:text="@string/next"
                    android:textColor="@color/dialog_blue"
                    android:textSize="16sp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
