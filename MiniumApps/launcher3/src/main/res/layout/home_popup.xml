<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/pop_up_color"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:elevation="7dp"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <LinearLayout
                android:id="@+id/linTempo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_15"
                android:paddingLeft="20dp"
                android:paddingRight="25dp"
                android:paddingTop="@dimen/dp_15">

                <!--<ImageView-->
                <!--android:layout_width="28dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:background="@drawable/ic_tempo_dailog" />-->

                <co.siempo.phone.customviews.RobotoMediumTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_tempo_dailog"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="@string/tempo"
                    android:textColor="?attr/txt_content_title"
                    android:textSize="@dimen/sp_16"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_15"
                android:paddingLeft="20dp"
                android:paddingRight="25dp"
                android:paddingTop="@dimen/dp_15">

                <!--<ImageView-->
                <!--android:layout_width="30dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:background="@drawable/ic_settings_tempo" />-->

                <co.siempo.phone.customviews.RobotoMediumTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_settings_tempo"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="@string/settings"
                    android:textColor="?attr/txt_content_title"
                    android:textSize="@dimen/sp_16"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_15"
                android:paddingLeft="20dp"
                android:paddingRight="25dp"
                android:paddingTop="@dimen/dp_15">

                <!--<ImageView-->
                <!--android:layout_width="30dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:background="@drawable/ic_help_tempo" />-->

                <co.siempo.phone.customviews.RobotoMediumTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_help_tempo"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="@string/help"
                    android:textColor="?attr/txt_content_title"
                    android:textSize="@dimen/sp_16"/>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>