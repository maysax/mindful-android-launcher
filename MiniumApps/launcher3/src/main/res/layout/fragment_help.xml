<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/activity_pause"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:ignore="UnusedIds">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/toolbar_style"
        app:navigationIcon="@drawable/ic_arrow_back_blue_24dp"
        app:titleTextColor="?attr/toolbar_text_color"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relFaq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:padding="16dp">

            <co.siempo.phone.customviews.RobotoRegularTextView
                android:id="@+id/txtFaq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="@string/faq"
                android:textSize="@dimen/text.size.large"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relPrivacyPolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:padding="16dp">


            <co.siempo.phone.customviews.RobotoRegularTextView
                android:id="@+id/txtPrivacyPolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="@string/privacy_policyy"
                android:textSize="@dimen/text.size.large"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relTermsOfCondition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:padding="16dp">

            <co.siempo.phone.customviews.RobotoRegularTextView
                android:id="@+id/txtTermsOfCondition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="@string/terms_services"
                android:textSize="@dimen/text.size.large"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:padding="16dp">

            <co.siempo.phone.customviews.RobotoRegularTextView
                android:id="@+id/txtSendFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="@string/feedback"
                android:textSize="@dimen/text.size.large"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp">

            <LinearLayout
                android:id="@+id/lnrVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <co.siempo.phone.customviews.RobotoRegularTextView
                    android:id="@+id/txtVersion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="@string/version"
                    android:textSize="@dimen/text.size.large"/>

                <co.siempo.phone.customviews.RobotoRegularTextView
                    android:id="@+id/txtVersionValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textSize="@dimen/text.size.regular"/>
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>
