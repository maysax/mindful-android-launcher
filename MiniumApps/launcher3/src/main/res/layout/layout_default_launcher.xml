<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@color/transparent"
                tools:context=".activities.EmailRequestActivity">


    <android.support.v7.widget.CardView
        android:id="@+id/cardCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:background="#F7F7F7"
        android:elevation="@dimen/dp_5"
        app:cardCornerRadius="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <co.siempo.phone.customviews.RobotoRegularTextView
                    android:id="@+id/txtMakelauncher"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    android:text="@string/would_you_like_to"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:visibility="visible"/>


                <co.siempo.phone.customviews.RobotoRegularTextView
                    android:id="@+id/txtErrorMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/make_your_home_string"
                    android:textColor="#8A000000"
                    android:textSize="15sp"
                    android:visibility="visible"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="right"
                android:paddingTop="16dp">

                <Button
                    android:id="@+id/btnLater"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@null"
                    android:text="@string/later_string"
                    android:textAllCaps="true"
                    android:textColor="@color/dialog_blue"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/btnEnable"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:background="@drawable/button_background_blue"
                    android:text="@string/btn_enable"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
